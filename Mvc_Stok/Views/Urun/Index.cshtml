@using Mvc_Stok.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.UrunId</th>
                <td>@item.UrunAd</td>
                <td>@item.Marka</td>
                <td>@item.Tbl_Kategoriler.KategoriAd</td>
                <td>@item.Fiyat</td>
                <td>@item.Stok</td>
                <td><a href="/Urun/UrunSil/@item.UrunId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urun/UrunGetir/@item.UrunId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

