@model Mvc_Stok.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post))
{
<div class="form-group">
    <label>Ürün ID</label>
    @Html.TextBoxFor(m => m.UrunId, new { @class = "form-control" })
    <br />
    <label>Ürün Adı</label>
    @Html.TextBoxFor(m => m.UrunAd, new { @class = "form-control" })
    <br />
    <label>Ürün Markası</label>
    @Html.TextBoxFor(m => m.Marka, new { @class = "form-control" })
    <br />
    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(m => m.Tbl_Kategoriler.KategoriID, (List<SelectListItem>)ViewBag.ktgCmb, new { @class = "form-control" })
    <br />
    <label>Ürün Fiyatı</label>
    @Html.TextBoxFor(m => m.Fiyat, new { @class = "form-control" })
    <br />
    <label>Ürün Stok</label>
    @Html.TextBoxFor(m => m.Stok, new { @class = "form-control" })
    <br />
</div>
<div>
    <button class="btn btn-warning">Ürün Güncelle</button>
</div>
}

